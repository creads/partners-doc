{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "properties": {
    "gid": {
      "type": "string",
      "readOnly": true
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "readOnly": true
    },
    "modified_at": {
      "type": "string",
      "format": "date-time",
      "readOnly": true
    },
    "href": {
      "type": "string",
      "readOnly": true
    },
    "quality": {
      "description": "Creative's work quality",
      "type": "integer",
      "maximum": 5,
      "minimum": 1,
      "required": true
    },
    "reactivity": {
      "description": "Creative's reactivity",
      "type": "integer",
      "maximum": 5,
      "minimum": 1,
      "required": true
    },
    "communicativeness": {
      "description": "Ability to communicate with partner",
      "type": "integer",
      "maximum": 5,
      "minimum": 1,
      "required": true
    },
    "work_with_again": {
      "description": "Would you like to work with him/her again? 0: no, 1: yes, 2: don't know",
      "type": "integer",
      "maximum": 2,
      "minimum": 0,
      "required": true
    },
    "public_comment": {
      "description": "Some comments about the creative",
      "type": "string",
      "minLength": 0,
      "maxLength": 1024
    },
    "private_comment": {
      "type": "string",
      "minLength": 0,
      "maxLength": 1024
    },
    "worker": {
        "$ref": "worker.reference.json",
        "required": true
    },
    "project": {
        "$ref": "reference.json",
        "required": true
    }
  },
  "additionalProperties": false
}
