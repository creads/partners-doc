{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "properties": {
    "gid": {
      "type": "string",
      "readOnly": true
    },
    "href": {
      "type": "string",
      "readOnly": true
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "readOnly": true
    },
    "modified_at": {
      "type": "string",
      "format": "date-time",
      "readOnly": true
    },
    "won_at": {
      "type": [null, "string"],
      "format": "date-time",
      "readOnly": true
    },
    "description": {
      "type": "string",
      "required": true,
      "maxLength": 8000
    },
    "project": {
      "$ref": "reference.json",
      "required": true
    },
    "worker": {
      "$ref": "worker.reference.json",
      "required": true
    },
    "parent": {
        "oneOf": [
            {"type": "null"},
            {"$ref": "reference.json"}
        ],
        "required": false
    },
    "image": {
      "oneOf": [
          {"type": "null"},
          {"$ref": "image.json"}
      ],
      "required": false
    },
    "thumbnail": {
      "oneOf": [
          {"type": "null"},
          {"$ref": "image.json"}
      ],
      "required": false
    },
    "content": {
      "type": ["null", "string"],
      "required": false,
      "maxLength": 1024
    },
    "weight": {
      "type": "integer",
      "required": false,
      "min": 0
    }
  },
  "additionalProperties": false
}