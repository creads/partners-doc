{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "properties": {
    "gid": {
      "type": "string",
      "readOnly": true
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "modified_at": {
      "type": "string",
      "format": "date-time",
      "readOnly": true
    },
    "message": {
      "type": "string",
      "minLength": 0,
      "maxLength": 8000,
      "required": true
    },
    "uri": {
      "type": "string",
      "minLength": 0,
      "maxLength": 255,
      "required": true
    },
    "author": {
        "oneOf": [
            {"type": "null"},
            {"$ref": "user.public.json"}
        ],
        "required": false
    },
    "worker": {
        "oneOf": [
            {"type": "null"},
            {"$ref": "worker.reference.json"}
        ],
        "required": false
    },
    "mine": {
      "type": "boolean",
      "readOnly": true
    },
    "nickname": {
      "type": "string",
      "readOnly": true
    },
    "avatar": {
      "oneOf": [
          {"type": "null"},
          {"$ref": "image.json"}
      ],
      "required": false,
      "readOnly": true
    }
  },
  "definitions": {
  }
}
