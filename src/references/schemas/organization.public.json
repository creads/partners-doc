{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "properties": {
    "gid": {
      "type": "string",
      "readOnly": true
    },
    "name": {
      "type": "string",
      "maxLength": 80,
      "required": true
    },
    "hostname": {
      "type": [null, "string"]
    },
    "logo": {
      "oneOf": [
          {"type": "null"},
          {"$ref": "image.json"}
      ],
      "required": false
    },
    "additional_meta" : {
      "type": ["object","array"]
    }
  },
  "additionalProperties": false
}
