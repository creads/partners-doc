<!DOCTYPE html>
<html dir="ltr" lang="fr-FR">
  <head>
      <title>{{ title }} |Â {{ site_title }}</title>
      <meta http-equiv="content-type" content="text/html; charset=utf-8" />
      <link rel="stylesheet" href="{{ base_dir }}/main.css" type="text/css" />
  </head>

  <body class="bg-white" cz-shortcut-listen="true" >

    {# HEADER START #}
    <header class="navbar navbar-expand-lg navbar-dark bg-dark shadow fixed-top" style="z-index: 5;">

      <div class="container-fluid">
        <div class="row flex">
          <div class="col-12">
            <div class="d-block d-lg-flex justify-content-lg-between">
              <a class="navbar-brand" href="{{ base_dir }}"><img src="/assets/logo.svg" alt="Creads" height="44"></a>
              <button class="navbar-toggler float-right mt-2 mt-lg-0 float-lg-none border-0" type="button" data-toggle="collapse" data-target="#navbarMenuMain">
                <i class="fas fa-bars navbar__toggler-icon"></i>
              </button>
              {% if section_menu %}
              <div class="navbar-collapse collapse justify-content-end" id="navbarMenuMain">
                <div class="navbar__item flex-1 align-items-center">
                  {% for uri, title in section_menu %}
                  <a class="navbar__item-link ng-binding {% if current_section == uri %}navbar__item-link--active{% endif %}" href="{{ base_dir }}{{ uri }}">{{ title }}</a>
                  {% endfor %}
                </div>
              </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </header>
    {# HEADER END #}


    {# CONTENT START #}
    <div class="container-fluid">
      <div id="tabs" class="row">
        {# SIDEBAR START #}
        {% block nav %}
        {% if collections.api %}
        <nav id="nav" class="col-2 sticky-top pt-5 mt-4 h-100 overflow-auto border-right position-fixed d-none d-lg-block bg-light"
          style="z-index: 4;">
          <ul class="list mt-3">
            {#% if section_title %}<li>{{ section_title }}</li>{% endif %#}
            {% for page in collections.api %}
            <li class="list__item mb-3{% if path == page.path %} active{% endif %}"><a href="{{ base_dir }}/{% if page.path %}{{ page.path }}{% endif %}">{{ page.title }}</a></li>
            {% endfor %}
          </ul>
        </nav>
        {% endif %}
        {% endblock nav %}
        {# SIDEBAR END #}
        <main role="main" class="col-12 col-lg-10 offset-lg-2 pt-5 mt-4">
          <div class="row">
            <div class="col-12">
              <div class=" mt-3">
              {% block content %}{% endblock %}
              </div>
            </div>
          </div>
        </main>
      </div>
    </div>
    {# CONTENT END #}

    <div id="gotoTop"><i class="fas fa-angle-up"></i></div>

    <script type="text/javascript" src="{{ base_dir }}/main.js"></script>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-57696122-1', 'auto');
      ga('send', 'pageview');
    </script>
  </body>
</html>
